{% extends '::base.html.twig' %}
{% block titre %}Discographie{% endblock %}
{% block contenu %}
<style>
    ul li{
        color:red;
    }
    hr{
        margin-top:0;
    }
    select{
        width:99%;
    }
    h4{
        margin-top:0;
    }
</style>
{% include 'SitePageBundle:include:flash.html.twig' %}
{% for d in disques %}
    <div class="well">
        {% if loop.first %}
            <div class="page-header">
                <h3> Discographie
                {% if app.session.get('rang') == 'Administrateur' %}
                    <small><a href="{{ path('disque_editer') }}"> ajouter un disque</a></small>
                {% endif %}
                </h3>
            </div>
        {% endif %}
        {{ d.titre }}
        {% if app.session.get('rang') == 'Administrateur' %}
            <small><a href="{{ path('disque_supprimer', { 'id': d.id }) }}"><i class="icon-remove"></i></a><a href="{{ path('disque_editer',{ 'id': d.id }) }}"><i class="icon-pencil icon-white"></i></a></small>
        {% endif %}
        <p>Date de sortie : {{ d.date|date('d/m/Y') }}</p>
        <div class="well">
            <div class="row-fluid">
                <img style="float:left;margin-right: 10px;margin-bottom: 10px;"  src="{{ asset('pochettes/') }}{{ d.pochette|raw }}" width="300px" height="300px" alt="pochette album" /><br />{{ d.tracklist|nl2br }}
            </div>
            <div class="row-fluid">
                <p>Label : {{ d.label|raw }}</p>
                <p>{{ d.description|raw }}</p>
            </div>
        </div>
        

        
        {{ render(controller('SiteMediaBundle:Disque:commentaire', {'id': d.id } )) }}
    </div>
{% else %}
    <div class="well">
        <div class="page-header">
            <h3>Discographie
            {% if app.session.get('rang') == 'Administrateur' %}
                <small><a href="{{ path('disque_editer') }}"> ajouter un disque</a></small>
            {% endif %}</h3>
        </div>
        <center><p>Aucun disque pour le moment</p></center>
    </div>
{% endfor %}
{% endblock %}