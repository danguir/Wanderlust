{% extends '::admin.html.twig' %}
{% block titre %}Ajouter un disque{% endblock %}
{% block contenu %}
<style>    
    ul li{
        color:red;
    }
    hr{
        margin-top:0;
    }
    h4{
        margin-top:0;
    }
    input{
        width:99%;
    }
    textarea{
        width:98%;
        height:213px;
        resize:none;
    }
    select{
        width:80px
    }
</style>

{% if app.session.get('rang') == 'Administrateur' %}
    <div class="well">
        <div class="row-fluid">
            <div class="page-header"><h3>Ajouter un disque</h3></div>
        </div>
        <div class="row-fluid">
            <div class="span6">
                <form style="float:none;margin:0 auto;" action="" method="POST">
                {{ form_row(form.titre) }}
                {{ form_row(form.date) }}
                {{ form_row(form.pochette, { 'attr': {'placeholder': 'mon_image.jpg' } }) }}
                {{ form_row(form.label) }}
            </div>
            <div class="span6">
                {{ form_row(form.tracklist) }}
            </div>
        </div>
        <div class="row-fluid">
            {{ form_row(form.description) }}
        </div>
        <div class="row-fluid">
            <input type="submit" class="btn btn-primary" value="Envoyer" />
            </form>
        </div>
    </div>
{% endif %}
{% endblock %}