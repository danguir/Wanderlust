{% extends '::admin.html.twig' %}
{% block contenu %}
<style>
    input{
        width:99%;
    }
    textarea{
        width:99%;
        height:200px;
    }
</style>
{% if app.session.get('rang') == 'Administrateur' %}
<div class="well">
    <div class="row-fluid">
        <div class="page-header"><h3>Ajouter une video</h3></div>
        <form style="float:none;margin:0 auto;" action="" method="POST">
        {{form_row(form.titre)}}
        {{form_row(form.code)}}
        {{form_row(form.description)}}
    </div>
    <div class="row-fluid">
        <br /><input type="submit" class="btn btn-primary" value="Envoyer" />
        </form>
    </div>
</div>
{% endif %}
{% endblock %}