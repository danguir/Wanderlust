{% extends '::admin.html.twig' %}
{% block titre %}Ajouter une News{% endblock %}
{% block css %}
{{ parent()}}
<style>
    ul li{
        list-style: none;
    }
    textarea{
        width: 100%;
        height: 200px;
        resize: none;
    }
    input{
        width: 99%;
    }
</style>
{% endblock %}

{% block contenu %} 
{% include 'SitePageBundle:include:flash.html.twig' %}
<div class="well">
    <form action="" method="POST">
        <div class="page-header"><h3>Ajouter une News</h3></div>
        <div class="row-fluid">
            {{form_row(form.titre)}}<br />
            {{form_widget(form.contenu)}}
            <br /><input type="submit" class="btn btn-primary" value="Envoyer"/>
        </div>
    </form>
</div>
{% endblock %}